-pbp     # Perl Best Practice
-w       # Show all warnings
-iob     # Ignore old breakpoints
-l=180    # 80 characters per line
-mbl=2   # No more than 2 blank lines
-i=4     # Indentation is 4 columns
-ci=4    # Continuation indentation is 4 columns
-vt=0    # Less vertical tightness
-pt=1    # Mid parenthesis tightness
-bt=1    # Mid brace tightness
-sbt=1   # Mid square bracket tightness
-isbc    # Don't indent comments without leading space
